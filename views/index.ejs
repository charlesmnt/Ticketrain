<%- include("partials/header") %> 
      
    <div class="container-fluid">
      <div class="row sign">
        <% if(error !== undefined) { %>
          <div class="col-3 d-flex">
            <div class="alert alert-danger" role="alert">
              <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div> 
          </div>  
        <% } %>
        <div class="formulaire col-12">
          <div class="saisie">
          <h3>Sign-in</h3>
          <form action="/sign-in" method="POST"  class="text-center">
          <input type="text" name="email" class="form-control text" placeholder="Email">
          <input type="password" name="password" class="form-control text" placeholder="Password">
          <button type="submit" class="btn btn-danger">Confirm</button>
          </form>
          </div>
          <div class="saisie">
            <h3>Sign-up</h3>
            <form action="/sign-up" method="POST" class="text-center">
            <input type="text" name="name" class="form-control text" placeholder="Name">
            <input type="text" name="firstname" class="form-control text" placeholder="Firstname">
            <input type="text" name="email" class="form-control text" placeholder="Email">
            <input type="text" name="password" class="form-control text" placeholder="Password">
            <button type="submit" class="btn btn-danger">Confirm</button>
            </form> 
          </div>
        </div>
      </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>

<%- include("partials/header") %> 

    <div class="row d-flex justify-content-center">
      <div class="col-8">
        <h2 class="text-white text-start mt-5 mb-3">My tickets:</h2>
      </div>
    </div>  
    <div class="row d-flex justify-content-center">
      <div class="col-8">

        <table class="table table-borderless bg-white">
          <thead>
            <tr class="table-row">
              <th scope="col">N°</th>
              <th scope="col">Journey</th>
              <th scope="col">Date</th>
              <th scope="col">Departure Time</th>
              <th scope="col">Price</th>
            </tr>
          </thead>
          <tbody>
            <% trips.forEach((trip, index) => { %>              
              <tr class="table-row">
                <th scope="row"><%= index + 1 %></th>
                <td><%= trip.departure %>/<%= trip.arrival %></td>
                <td><%= formatDate(trip.date) %></td>
                <td><%= trip.departureTime %></td>
                <td><%= trip.price %></td>
                <td><a href="/delete-trip/<%= index %>"><i class="far fa-trash-alt text-danger"></i></a></td>
              </tr>
            <% }); %>

            <tr class="table-danger">
              <th scope="row">Total</th>
              <td></td>
              <td></td>
              <td></td>
              <th><%= totalPrice %> €</th>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row d-flex justify-content-center">
      <div class="col-8 d-flex justify-content-between">
        <button onclick="history.go(-1)" id="back-to-search" class="btn btn-danger">Back</button>
        <form action="/create-checkout-session" method="POST">
          <button class="btn btn-danger text-end" name="button-checkout" type="submit">CONFIRM</button>
        </form>
      </div>
    </div>



<%- include("partials/footer") %>       
    

